using System;
using System.Collections.Generic;
using System.Drawing;

namespace FormPartenerAndChild
{
    internal class CMidpointCircleAlgorithm
    {
        // Genera los puntos del círculo usando el algoritmo del punto medio
        // Devuelve una lista de Point (coordenadas de píxel)
        public List<Point> GenerateCirclePoints(int xc, int yc, int r)
        {
            var points = new List<Point>();

            int x = 0;
            int y = r;
            int p = 1 - r;

            AddSymmetricPoints(points, xc, yc, x, y);

            while (x < y)
            {
                x++;
                if (p < 0)
                {
                    p = p + 2 * x + 1; // fórmula para p cuando se incrementa x
                }
                else
                {
                    y--;
                    p = p + 2 * (x - y) + 1; // ajustar según la fórmula clásica
                }
                AddSymmetricPoints(points, xc, yc, x, y);
            }

            return points;
        }

        private void AddSymmetricPoints(List<Point> points, int xc, int yc, int x, int y)
        {
            points.Add(new Point(xc + x, yc + y));
            points.Add(new Point(xc - x, yc + y));
            points.Add(new Point(xc + x, yc - y));
            points.Add(new Point(xc - x, yc - y));
            points.Add(new Point(xc + y, yc + x));
            points.Add(new Point(xc - y, yc + x));
            points.Add(new Point(xc + y, yc - x));
            points.Add(new Point(xc - y, yc - x));
        }
    }
}
